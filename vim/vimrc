
" Note that for a third-party package, such as a git-repository unpacked under
" '~/.vim/pack', one must manually run, for example,
" ':helptags " ~/.vim/pack/plugins/start/vimwiki/doc'
" in order to build the help pages.

set nocompatible
filetype plugin indent on
syntax on

runtime vimrc_ycm
runtime vimrc_wiki

if   &term == "xterm"
\ || &term == "xterm-256color"
\ || &term == "stterm-256color"
\ || &term == "screen"
\ || &term == "screen.xterm-256color"
   set t_Co=256
   colorscheme inkpot
endif

set   ai
set   backspace=1
set   bs=2
set   expandtab
set   history=100
set   incsearch
set   laststatus=2
set   mouse=a
set   mousefocus
set   mousehide
set norestorescreen
set   shiftwidth=2
set   showmatch
set   statusline=%-f\ %m\ %y\ row=%l\ col=%c
set   tabstop=8
set   textwidth=79
set nowrap

if has("gui_running")
   " GUI is running or is about to start.
   set lines=40
   set columns=100
endif

set hlsearch

setlocal grepprg="pcregrep -n $* /dev/null"
command! -buffer -nargs=1 Cgrep grep <q-args> `find . -iname '*.c' -o -iname '*.cpp' -o -iname '*.h' -o -iname '*.hpp'`

highlight ExtraWhitespace ctermbg=blue guibg=blue
match ExtraWhitespace /\s\+$/

