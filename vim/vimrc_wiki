" Configuration for vimwiki.

let wiki_journal = {}
let wiki_journal.path = '~/Desktop/journal/wiki-src/'
let wiki_journal.auto_toc = 1
let wiki_journal.auto_tags = 1
let wiki_journal.ext = '.md'
let wiki_journal.syntax = 'markdown'

let wiki_misc = {}
let wiki_misc.path = '~/Desktop/misc/wiki-src/'

let g:vimwiki_list = [wiki_journal, wiki_misc]
let g:vimwiki_use_calendar = 1

" Let markdown file not inside registered wiki be rendered as markdown.
let g:vimwiki_ext2syntax = {'.md': 'markdown'}

let mapleader="-"

autocmd FileType vimwiki setlocal tabstop=4 expandtab
autocmd FileType markdown setlocal tabstop=4 expandtab
